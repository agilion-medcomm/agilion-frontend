/* YENÄ°: Silme Butonu */
.delete-icon-btn {
  background: transparent;
  border: none;
  cursor: pointer;
  color: #999;
  padding: 6px;
  border-radius: 6px;
  transition: all 0.2s;
}

.delete-icon-btn:hover {
  background-color: #fee2e2;
  color: #c1272d;
}

/* YENÄ°: Silme ModalÄ± Ä°Ã§erik */
.delete-info-box {
  background: #f9fafb;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  padding: 15px;
  margin-top: 10px;
}

.delete-info-box p {
  margin: 5px 0;
  font-size: 0.95rem;
  color: #374151;
}

.delete-confirm-btn {
  background: #c1272d; /* KÄ±rmÄ±zÄ± */
  color: white;
  border: none;
  padding: 8px 24px;
  border-radius: 6px;
  cursor: pointer;
  font-weight: 600;
}
.delete-confirm-btn:hover {
  background: #a01b20;
}