/* --- MODAL STÄ°LLERÄ° (YENÄ°) --- */
.modal-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5); /* YarÄ± saydam siyah */
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  animation: fadeIn 0.2s ease;
}

.modal-box {
  background: white;
  width: 100%;
  max-width: 400px;
  border-radius: 12px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.3);
  padding: 24px;
  position: relative;
  animation: slideInModal 0.2s ease;
}

@keyframes slideInModal {
  from { transform: translateY(-20px); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  border-bottom: 1px solid #eee;
  padding-bottom: 10px;
}

.modal-header h3 {
  margin: 0;
  color: #333;
  font-size: 1.2rem;
}

.modal-close-btn {
  background: transparent;
  border: none;
  cursor: pointer;
  color: #999;
}
.modal-close-btn:hover { color: #333; }

.modal-form {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.modal-field {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.modal-field label {
  font-size: 0.9rem;
  font-weight: 600;
  color: #555;
}

.modal-field input {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 1rem;
}

.modal-field input:focus {
  border-color: #c1272d;
  outline: none;
  box-shadow: 0 0 0 2px rgba(193,39,45,0.1);
}

.modal-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  margin-top: 10px;
}

.cancel-btn {
  background: #f3f4f6;
  color: #444;
  border: 1px solid #e5e7eb;
  padding: 8px 16px;
  border-radius: 6px;
  cursor: pointer;
  font-weight: 600;
}
.cancel-btn:hover { background: #e5e7eb; }

.save-btn {
  background: #c1272d;
  color: white;
  border: none;
  padding: 8px 20px;
  border-radius: 6px;
  cursor: pointer;
  font-weight: 600;
}
.save-btn:hover { background: #a01b20; }

.modal-error {
  color: #c1272d;
  font-size: 0.9rem;
  background: #fff0f0;
  padding: 8px;
  border-radius: 4px;
  text-align: center;
}

